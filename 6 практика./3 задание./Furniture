public abstract class Furniture {
    private String color;
    private int size;

    public Furniture(int size, String color){
        this.color = color;
        this.size = size;
    }

    public void setSize(int size) {
        this.size = size;
    }

    public int getSize() {
        return size;
    }

    public void setColor(String color) {
        this.color = color;
    }

    public String getColor() {
        return color;
    }

    abstract void sale();
    @Override
    public String toString() {
        return "Furniture: {" +
                "color ='" + color + '\'' +
                ", size =" + size +
                '}';
    }
}
